<?php
$this->pageBreadcrumbs()->setItems([
    'Home' => $this->url('home'),
    'Banco' => $this->url('banco'),
    'Edit' => '#',
]);

$form = $this->form;
$form->prepare();

$banco = $this->banco;

$filter = new \Application\Filter\CnpjFilter();

$form->get('codigo')->setAttributes([
    'class' => 'form-control',
    'placeholder' => 'Código do banco',
    'value' => $banco->getCodigo(),
]);

$form->get('descricao')->setAttributes([
    'class' => 'form-control',
    'placeholder' => 'Descrição',
    'value' => $banco->getDescricao(),
]);

$form->get('cnpj')->setAttributes([
    'class' => 'form-control',
    'placeholder' => 'CNPJ',
    'value' => $filter->filter($banco->getCnpj()),
    'maxlength' => 14,
]);

$form->get('submit')->setAttributes(['class' => 'btn btn-success']);
?>
<h1>CADASTRO DE BANCO</h1>
<div class="row">
    <div class="col-md-6">
        <?= $this->form()->openTag($form); ?>

        <div class="form-group">
            <?= $this->formLabel($form->get('codigo')); ?>
            <?= $this->formElement($form->get('codigo')); ?>
            <?= $this->formElementErrors($form->get('codigo')); ?>
        </div>

        <div class="form-group">
            <?= $this->formLabel($form->get('descricao')); ?>
            <?= $this->formElement($form->get('descricao')); ?>
            <?= $this->formElementErrors($form->get('descricao')); ?>
        </div>

        <div class="form-group">
            <?= $this->formLabel($form->get('cnpj')); ?>
            <?= $this->formElement($form->get('cnpj')); ?>
            <?= $this->formElementErrors($form->get('cnpj')); ?>
        </div>

        <?= $this->formElement($form->get('submit')); ?>

        <?= $this->form()->closeTag(); ?>
    </div>    
</div>